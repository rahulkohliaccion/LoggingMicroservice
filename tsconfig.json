{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "paths": {
            "@module/*": ["src/module/*"],
            "@banking/*": ["src/banking/*"],
            "@common/*": ["src/common/*"],
            "@util/*": ["src/util/*"],
            "@constant/*": ["src/constant/*"]
        }
    }
}
